<Page
    x:Class="TurboTyper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TurboTyper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Grid.Row="0">
            <TextBlock x:Name="DisplayText" Text="Turbo Typer" FontSize="45" FontStyle="Italic" FontWeight="Bold" Margin="0,30,0,0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,30">
            <Button x:Name="AButton" Width="60" Height="60" Margin="30">
                <Button.Content>
                    <Canvas Width="60" Height="60">
                        <TextBlock Text="4" FontFamily="Webdings" FontSize="30" Canvas.Top="15" Canvas.Left="12"/>
                        <TextBlock Text="Play" Canvas.Left="0" Canvas.Top="45"/>
                    </Canvas>
                </Button.Content>
            </Button>
            <Button x:Name="SButton" Width="60" Height="60" Margin="30">
                <Button.Content>
                    <Canvas Width="60" Height="60">
                        <TextBlock Text="s" FontFamily="Webdings" FontSize="30" Canvas.Top="15" Canvas.Left="12"/>
                        <TextBlock Text="Help" Canvas.Left="0" Canvas.Top="45"/>
                    </Canvas>
                </Button.Content>
            </Button>
            <Button x:Name="DButton" Width="60" Height="60" Margin="30">
                <Button.Content>
                    <Canvas Width="60" Height="60">
                        <TextBlock Text="¼" FontFamily="Webdings" FontSize="30" Canvas.Top="15" Canvas.Left="12"/>
                        <TextBlock Text="Options" Canvas.Left="0" Canvas.Top="45"/>
                    </Canvas>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Page>
